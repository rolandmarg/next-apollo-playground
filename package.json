{
  "name": "midnight-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"yarn graphql-codegen\"",
    "build": "next build",
    "start": "next build && next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "graphql-codegen": "graphql-codegen --config graphql-codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "^3.0.0",
    "@hapi/iron": "^6.0.0",
    "apollo-server-micro": "^2.15.1",
    "bcrypt": "^5.0.0",
    "class-validator": "^0.12.2",
    "graphql": "^15.3.0",
    "moment": "^2.27.0",
    "ms": "^2.1.2",
    "next": "11.1.0",
    "pg": "^8.3.0",
    "react": "16.13.1",
    "react-big-calendar": "^0.26.0",
    "react-dom": "16.13.1",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@graphql-codegen/cli": "1.17.0",
    "@graphql-codegen/typescript": "1.17.0",
    "@graphql-codegen/typescript-operations": "^1.17.0",
    "@graphql-codegen/typescript-react-apollo": "^1.17.0",
    "@graphql-codegen/typescript-resolvers": "^1.17.0",
    "@types/bcrypt": "^3.0.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^14.0.23",
    "@types/react": "^16.9.43",
    "@types/react-big-calendar": "^0.24.2",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "autoprefixer": "^9.8.5",
    "babel-plugin-transform-typescript-metadata": "^0.3.0",
    "concurrently": "^5.2.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "4.0.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "tailwindcss": "^1.4.6",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  }
}
